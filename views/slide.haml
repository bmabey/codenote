!!!
%html
  %head
    %title= "#{presentation.title} - #{presentation.presenter}"
    %link{ :href => "/stylesheets/slides.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %script{ :type => "text/javascript", :src => "/javascripts/jquery-1.3.2.js" }
    %script{ :type => "text/javascript", :src => "/javascripts/slides.js" }
    - if @slide.dynamic?
      %script{ :type => "text/javascript", :src => "/javascripts/jquery.ekko.js" }
      %script{ :type => "text/javascript", :charset => "utf-8" }
      :javascript
        jQuery(document).ready(function () {
          jQuery('#slide-container').ekko({
          url : '/slides/#{@slide.id}/update',
          minTimeout : 500,
          }, function (data) {
            $('#slide-container').empty().append(data).attr('rel', 'updated');
          });
        });

  %body
    #header
      -if @previous_slide
        %a{:href => "/slides/#{@previous_slide}"} Previous
      -if @next_slide
        %a{:href => "/slides/#{@next_slide}"} Next
    #slides
      #track
        #slide-container{ :classes => @slide.classes }
          %div{ :id => "slide-#{@slide.id}", :classes => 'content'}~ @slide.html
